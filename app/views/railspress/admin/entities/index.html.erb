<% content_for :title, entity_config.label %>

<%= rp_page_header(entity_config.label, "New #{entity_config.singular_label}" => entity_new_path) %>

<%= rp_card do %>
  <% if @records.any? %>
    <div class="rp-table--responsive">
      <table class="rp-table">
        <thead>
          <tr>
            <% entity_config.fields.each do |name, field| %>
              <th><%= name.to_s.humanize %></th>
            <% end %>
            <th>Created</th>
            <th class="rp-table-actions">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
            <tr>
              <% entity_config.fields.each_with_index do |(name, field), index| %>
                <td>
                  <% value = record.public_send(name) %>
                  <% if index == 0 %>
                    <%= link_to entity_show_path(record), class: "rp-link rp-table-primary" do %>
                      <%= rp_truncated_text(value, length: 60) %>
                    <% end %>
                  <% else %>
                    <% case field[:type] %>
                    <% when :rich_text %>
                      <%= rp_truncated_text(strip_tags(value.to_s), length: 60) %>
                    <% when :boolean %>
                      <%= rp_boolean_badge(value) %>
                    <% when :datetime, :date %>
                      <%= value&.strftime("%b %d, %Y") || "â€”" %>
                    <% when :attachments %>
                      <%= rp_attachment_badge(value) %>
                    <% when :attachment %>
                      <%= rp_attachment_badge(value) %>
                    <% when :list, :lines %>
                      <% count = value.is_a?(Array) ? value.length : 0 %>
                      <span class="rp-badge <%= count > 0 ? 'rp-badge--info' : 'rp-badge--draft' %>">
                        <%= pluralize(count, "item") %>
                      </span>
                    <% else %>
                      <%= rp_truncated_text(value, length: 60) %>
                    <% end %>
                  <% end %>
                </td>
              <% end %>
              <td class="rp-table-secondary"><%= record.created_at.strftime("%b %d, %Y") %></td>
              <td class="rp-table-actions">
                <%= link_to "Edit", entity_edit_path(record), class: "rp-link" %>
                <%= button_to "Delete", entity_show_path(record), method: :delete,
                    data: { turbo_confirm: "Delete this #{entity_config.singular_label.downcase}?" },
                    class: "rp-link rp-link--danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= rp_empty_state("No #{entity_config.label.downcase} yet.",
          link_text: "Create your first #{entity_config.singular_label.downcase}",
          link_path: entity_new_path) %>
  <% end %>
<% end %>
