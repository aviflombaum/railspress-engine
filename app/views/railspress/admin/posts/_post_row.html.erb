<tr>
  <td class="rp-table-truncate">
    <%= link_to post.title, admin_post_path(post), class: "rp-link rp-table-primary", title: post.title %>
    <% if post.tags.any? %>
      <div class="rp-tag-list">
        <% post.tags.each do |tag| %>
          <span class="rp-tag"><%= tag.name %></span>
        <% end %>
      </div>
    <% end %>
  </td>
  <td><%= post.category&.name || "—" %></td>
  <% if authors_enabled? %>
    <td><%= post.author&.public_send(Railspress.author_display_method) || "—" %></td>
  <% end %>
  <td>
    <span class="rp-badge rp-badge--<%= post.status %>">
      <%= post.status.titleize %>
    </span>
  </td>
  <td class="rp-table-secondary" title="<%= post.published_at&.strftime("%B %-d, %Y at %-I:%M %p") %>">
    <% if post.published_at %>
      <span class="rp-table-date-full"><%= post.published_at.strftime("%-m/%-d/%Y %-I:%M%P") %></span>
      <span class="rp-table-date-short"><%= post.published_at.strftime("%-m/%-d/%y") %></span>
    <% else %>
      —
    <% end %>
  </td>
  <td class="rp-table-secondary" title="<%= post.created_at.strftime("%B %-d, %Y at %-I:%M %p") %>">
    <span class="rp-table-date-full"><%= post.created_at.strftime("%-m/%-d/%Y") %></span>
    <span class="rp-table-date-short"><%= post.created_at.strftime("%-m/%-d/%y") %></span>
  </td>
  <td class="rp-table-actions">
    <%= rp_table_action_icons(
          edit_path: edit_admin_post_path(post),
          delete_path: admin_post_path(post),
          confirm: "Delete this post?"
        ) %>
  </td>
</tr>
