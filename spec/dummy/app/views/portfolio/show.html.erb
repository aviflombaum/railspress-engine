<div class="post">
  <header class="post-header">
    <h1>
      <%= @project.title %>
      <% if @project.featured %>
        <span class="tag">Featured</span>
      <% end %>
    </h1>
    <div class="post-meta">
      <span>Client: <strong><%= @project.client %></strong></span>
    </div>
  </header>

  <% if @project.description.present? %>
    <p><%= @project.description %></p>
  <% end %>

  <% if @project.body.present? %>
    <div class="post-content">
      <%= @project.body %>
    </div>
  <% end %>

  <% if @project.tech_stack.any? %>
    <section>
      <h3>Tech Stack</h3>
      <div class="post-tags">
        <% @project.tech_stack.each do |tech| %>
          <span class="tag"><%= tech %></span>
        <% end %>
      </div>
    </section>
  <% end %>

  <% if @project.highlights.any? %>
    <section>
      <h3>Highlights</h3>
      <ul>
        <% @project.highlights.each do |highlight| %>
          <li><%= highlight %></li>
        <% end %>
      </ul>
    </section>
  <% end %>

  <% if @project.main_image.attached? %>
    <section>
      <h3>Cover Image</h3>
      <%= image_tag url_for(@project.main_image),
            style: @project.focal_point_css(:main_image),
            alt: @project.title %>
    </section>
  <% end %>

  <% if @project.gallery.attached? %>
    <section>
      <h3>Gallery</h3>
      <% @project.gallery.each do |image| %>
        <%= image_tag url_for(image), alt: @project.title %>
      <% end %>
    </section>
  <% end %>

  <footer class="post-footer">
    <nav class="post-navigation">
      <%= link_to "Back to Portfolio", portfolio_path %>
    </nav>
  </footer>
</div>
